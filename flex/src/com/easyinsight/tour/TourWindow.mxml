<?xml version="1.0" ?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:tour="com.easyinsight.tour.*" resize="PopUpUtil.centerPopUp(this)"
        backgroundImage="{background2}" backgroundSize="100%" showCloseButton="true" close="shutdown()">
    <mx:Script><![CDATA[
        import com.easyinsight.util.PopUpUtil;

        import mx.managers.PopUpManager;

        private function onMouseOut(event:MouseEvent):void {
            var box:Box = event.currentTarget as Box;
            box.setStyle("backgroundColor", 0xFFFFFF);
            box.setStyle("backgroundAlpha", 1);
        }

        private function onMouseOver(event:MouseEvent):void {
            var box:Box = event.currentTarget as Box;
            box.setStyle("backgroundColor", 0x195eb9);
            box.setStyle("backgroundAlpha", .73);
        }

        [Bindable]
        [Embed(source="../../../../assets/background2.JPG")]
        private var background2:Class;

        private function bizTour():void {
            currentState = "biz";
        }

        private function individualTour():void {

        }

        private function shutdown():void {
            if (currentState == "biz") {
                sevenSteps.stopVideo();    
            }
            PopUpManager.removePopUp(this);
        }

        [Bindable]
        [Embed(source="../../../../assets/media_play.png")]
        private var pointerIcon:Class;
        ]]></mx:Script>
    <mx:states>
        <mx:State name="individual">

        </mx:State>
        <mx:State name="biz">
            <mx:RemoveChild target="{initial}"/>
            <mx:AddChild relativeTo="{core}">
                <tour:SevenEasySteps backToWindow="currentState=''" id="sevenSteps"/>
            </mx:AddChild>
        </mx:State>
    </mx:states>
    <!--
        our roles:

        start with solution, low level
        start with high level KPI
            small biz ecommerce scenario
            start with some high level tree
            demonstrate dragging in at least one other concept
            building a marketing tree
                
        start with marketplace
        start with API
    -->
    <mx:Box id="core" paddingTop="20" paddingBottom="20" paddingLeft="20" paddingRight="20" width="100%" height="100%">
        <mx:VBox id="initial" width="100%" height="100%">
            <mx:HBox horizontalAlign="center" width="100%">
                <mx:VBox horizontalAlign="center">
                    <mx:Label text="We've got a few options for introducing you to Easy Insight." fontSize="18" fontFamily="Tahoma" fontWeight="bold"/>
                    <mx:Spacer height="30"/>
                    <mx:Label text="Let's start by figuring out a good role for you:" fontSize="18" fontFamily="Tahoma" fontWeight="bold"/>
                </mx:VBox>
            </mx:HBox>
            <mx:HBox horizontalGap="100" paddingLeft="30" paddingTop="30" paddingBottom="30" paddingRight="30" width="100%" height="100%"
                    horizontalAlign="center" verticalAlign="middle">
                <mx:Box borderStyle="solid" cornerRadius="15" dropShadowEnabled="true" horizontalAlign="center"
                        verticalAlign="middle" click="individualTour()" width="300" height="150" backgroundColor="#FFFFFF"
                        mouseOver="onMouseOver(event)" mouseOut="onMouseOut(event)">
                    <mx:TextArea backgroundAlpha="0" borderStyle="none" editable="false" selectable="false" fontSize="16"
                                 text="I'm just an individual seeing what this Easy Insight thing is" height="60" width="80%"/>
                </mx:Box>
                <mx:Box borderStyle="solid" cornerRadius="15" dropShadowEnabled="true" horizontalAlign="center"
                        verticalAlign="middle" click="bizTour()" width="300" height="150" backgroundColor="#FFFFFF"
                        mouseOver="onMouseOver(event)" mouseOut="onMouseOut(event)">
                    <mx:TextArea backgroundAlpha="0" borderStyle="none" editable="false" selectable="false"
                                 text="I want to know how Easy Insight can help my business" fontSize="16" height="60" width="80%"/>
                </mx:Box>
            </mx:HBox>
        </mx:VBox>
    </mx:Box>
    <mx:Script><![CDATA[
        import mx.managers.CursorManager;
        ]]></mx:Script>
</mx:TitleWindow>