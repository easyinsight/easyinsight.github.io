<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*" horizontalAlign="center">
    <mx:Script><![CDATA[

        private var _text:String;

        private var _showPrevious:Boolean;

        private var _textHeight:uint = 160;

        [Bindable(event="textHeightChanged")]
        public function get textHeight():uint {
            return _textHeight;
        }

        public function set textHeight(value:uint):void {
            if (_textHeight == value) return;
            _textHeight = value;
            dispatchEvent(new Event("textHeightChanged"));
        }

        private var _showNext:Boolean;

        public function set showPrevious(value:Boolean):void {
            _showPrevious = value;
        }

        public function set showNext(value:Boolean):void {
            _showNext = value;
        }

        [Bindable(event="textChanged")]
        public function get text():String {
            return _text;
        }

        public function set text(value:String):void {
            if (_text == value) return;
            _text = value;
            dispatchEvent(new Event("textChanged"));
        }

        protected override function createChildren():void {
            super.createChildren();
            /*if (!_showPrevious) {
                controlsBox.removeChild(previousButton);
            }*/
            if (!_showNext) {
                controlsBox.removeChild(nextButton);
            }
        }]]></mx:Script>
    <mx:TextArea text="{text}" textDecoration="none" borderStyle="none" backgroundAlpha="0" fontSize="14" width="230" height="{textHeight}" editable="false" selectable="false"/>
    <mx:HBox width="100%" horizontalAlign="center" id="controlsBox">
        <!--<mx:LinkButton label="Previous Tip" textDecoration="underline" id="previousButton" click="dispatchEvent(new NoteEvent(NoteEvent.PREVIOUS_NOTE, this))" fontSize="14"/>-->
        <mx:Button label="Next" id="nextButton" click="dispatchEvent(new NoteEvent(NoteEvent.NEXT_NOTE, this))" fontSize="14"/>
    </mx:HBox>
<!--    <mx:LinkButton label="Close" textDecoration="underline" click="dispatchEvent(new NoteEvent(NoteEvent.CLOSE_NOTE, this))" fontSize="12"/>-->
</mx:VBox>