<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" paddingTop="0" top="0">
	<mx:Script>
		<![CDATA[
			import com.easyinsight.framework.NavigationEvent;
			
			[Bindable]
            [Embed(source="../../../../assets/headericons/chart_area.png")]
            private var myDataIcon:Class;

            [Bindable]
            [Embed(source="../../../../assets/headericons/shopping_bag.png")]
            private var catalogIcon:Class;

            [Bindable]
            [Embed(source="../../../../assets/background2.JPG")]
            private var background2:Class;

            [Bindable]
            [Embed(source="../../../../assets/headericons/users2.png")]
            private var groupsIcon:Class;

            [Bindable]
            [Embed(source="../../../../assets/headericons/components.png")]
            private var solutionsIcon:Class;

            [Bindable]
            [Embed(source="../../../../assets/headericons/branch.png")]
            private var goalsIcon:Class;

            [Bindable]
            [Embed(source="../../../../assets/headericons/application_enterprise.png")]
            private var apiIcon:Class;
			
			private function toMarketplace():void {
            	dispatchEvent(new NavigationEvent("Marketplace"));
            }
            
            private function toUploads():void {
            	dispatchEvent(new NavigationEvent("My Data"));
            }

            private function toSolutions():void {
            	dispatchEvent(new NavigationEvent("Solutions"));
            }

            private function toGroups():void {
            	dispatchEvent(new NavigationEvent("Groups"));
            }

            private function toAPI():void {
            	dispatchEvent(new NavigationEvent("API")); 
            }

            private function toGoals():void {
            	dispatchEvent(new NavigationEvent("My Goals"));
            }
		]]>
	</mx:Script>
    <mx:HBox width="100%" height="100%" horizontalAlign="center" backgroundColor="#818285">
        <mx:VBox height="100%" backgroundImage="{background2}" backgroundSize="100%" width="1000" paddingTop="20">
            <mx:VBox width="100%" horizontalAlign="center">
                <mx:Label fontSize="18" color="#000000" text="Welcome to Easy Insight!"/>
                <mx:Label fontSize="16" color="#000000" text="You can start by clicking any of the top buttons to navigate to that particular section."/>
            </mx:VBox>
            <mx:HBox width="100%">
                <mx:Grid width="50%">
                    <mx:GridRow width="100%">
                    <mx:GridItem>
                        <mx:VBox horizontalAlign="center">
                            <mx:Image source="{myDataIcon}"/>
                            <mx:LinkButton label="My Data" textDecoration="underline" click="toUploads()"/>
                        </mx:VBox>
                    </mx:GridItem>
                    <mx:GridItem width="100%">
                        <mx:HBox verticalAlign="middle" width="100%">
                            <mx:TextArea borderStyle="none" backgroundAlpha="0" width="100%" text="Upload data files, connect to external data, manage your sources, create new reports"/>
                        </mx:HBox>
                    </mx:GridItem>
                </mx:GridRow>
                <mx:GridRow width="100%">
                    <mx:GridItem>
                        <mx:VBox horizontalAlign="center">
                            <mx:Image source="{groupsIcon}"/>
                            <mx:LinkButton label="Groups" textDecoration="underline" click="toGroups()"/>
                        </mx:VBox>
                    </mx:GridItem>
                    <mx:GridItem width="100%">
                        <mx:HBox verticalAlign="middle" width="100%">
                        <mx:TextArea borderStyle="none" backgroundAlpha="0" width="100%" text="Collaborate with others to understand problems, share your insights"/>
                    </mx:HBox>
                    </mx:GridItem>
                </mx:GridRow>
                <mx:GridRow width="100%">
                    <mx:GridItem>
                        <mx:VBox horizontalAlign="center">
                            <mx:Image source="{goalsIcon}"/>
                            <mx:LinkButton label="My Goals" textDecoration="underline" click="toGoals()"/>
                        </mx:VBox>
                    </mx:GridItem>
                    <mx:GridItem width="10%">
                    <mx:HBox verticalAlign="middle" width="100%">

                        <mx:TextArea borderStyle="none" backgroundAlpha="0" width="100%" text="Track your progress to meet key goals, solve end to end business problems"/>
                    </mx:HBox>
                    </mx:GridItem>
                </mx:GridRow>
            </mx:Grid>
                <mx:Grid width="50%">
                <mx:GridRow width="100%">

                    <mx:GridItem width="100">
                        <mx:VBox horizontalAlign="center" width="100%">
                            <mx:Image source="{catalogIcon}"/>
                            <mx:LinkButton label="Marketplace" textDecoration="underline" click="toMarketplace()"/>
                        </mx:VBox>
                    </mx:GridItem>
                    <mx:GridItem width="100%">
                        <mx:HBox verticalAlign="middle" width="100%">
                            <mx:TextArea borderStyle="none" backgroundAlpha="0" width="100%" text="Explore data sets that others have published, find interesting data to add to your own"/>
                        </mx:HBox>
                    </mx:GridItem>
                </mx:GridRow>
                <mx:GridRow width="100%">
                    <mx:GridItem width="100">
                        <mx:VBox horizontalAlign="center" width="100%">
                            <mx:Image source="{solutionsIcon}"/>
                            <mx:LinkButton label="Solutions" textDecoration="underline" click="toSolutions()"/>
                        </mx:VBox>
                        </mx:GridItem>
                    <mx:GridItem width="100%">
                    <mx:HBox verticalAlign="middle" width="100%">
                        <mx:TextArea borderStyle="none" backgroundAlpha="0" width="100%" text="Install solutions to rapidly gather data from a variety of sources"/>
                    </mx:HBox>
                    </mx:GridItem>
                </mx:GridRow>
                <mx:GridRow width="100%">
                    <mx:GridItem width="100">
                        <mx:VBox horizontalAlign="center" width="100%">
                            <mx:Image source="{apiIcon}"/>
                            <mx:LinkButton label="API" textDecoration="underline" click="toAPI()"/>
                        </mx:VBox>
                        </mx:GridItem>
                    <mx:GridItem width="100%">
                    <mx:HBox verticalAlign="middle" width="100%">
                        <mx:TextArea borderStyle="none" backgroundAlpha="0" width="100%" text="Publish data through a variety of powerful APIs to meet any use case"/>
                    </mx:HBox>
                    </mx:GridItem>
                </mx:GridRow>
            </mx:Grid>
            </mx:HBox>
            <mx:Spacer height="30"/>
            <mx:HBox width="100%" horizontalAlign="center">
                <mx:Label fontSize="16" color="#000000" text="The tutorials below can help you get started with a little more guidance."/>
            </mx:HBox>
        </mx:VBox>
    </mx:HBox>
</mx:Box>
