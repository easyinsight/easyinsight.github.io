<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" xmlns:account="com.easyinsight.account.*"
         top="0">
    <mx:Metadata>
        [Event(name="cancel", type="flash.events.Event")]
        [Event(name="pro", type="flash.events.Event")]
        [Event(name="basic", type="flash.events.Event")]
        [Event(name="plus", type="flash.events.Event")]
        [Event(name="free", type="flash.events.Event")]
    </mx:Metadata>
    <mx:Script>
		<![CDATA[
        import com.easyinsight.framework.UserTransferObject;

        [Bindable]
        private var account:Account;
        [Bindable]
        private var user:UserTransferObject;
        private var password:String;

        [Bindable]
        private var _destinationURL:String;


        protected override function commitProperties():void {
            super.commitProperties();
            if (_requiredTier > Account.PERSONAL) {
                stackIndex = 1;
            }
        }

        private var _requiredTier:int;

        public function set requiredTier(value:int):void {
            _requiredTier = value;
            invalidateProperties();
        }

        public function set destinationURL(value:String):void {
            _destinationURL = value;
        }

        private var _connectionName:String;

        public function set connectionName(value:String):void {
            _connectionName = value;
        }

        [Bindable]
        private var recommendationText:String;

        public function set accountType(value:int):void {
            _accountType = value;
        }

        private var _accountType:int;

        [Bindable]
        private var stackIndex:int;

        [Bindable]
        private var accountIndex:int;
		]]>
	</mx:Script>
    <mx:VBox width="100%" height="100%" id="coreContent" backgroundAlpha="1" paddingTop="0">

        <mx:VBox width="100%" height="100%" id="initialContent" horizontalAlign="center">
            <mx:Label text="30 Day Free Trial on All Accounts" fontSize="24" fontWeight="bold"/>
            <mx:Label text="Please note that whatever option you choose, no credit card is required for the trial period." fontSize="16"/>   
                <mx:HBox width="100%" horizontalAlign="center" paddingLeft="2" paddingRight="2" horizontalGap="15">
                    <mx:VBox borderStyle="solid" dropShadowEnabled="true" cornerRadius="8" horizontalAlign="center"
                             backgroundColor="#FFFFFF"
                             width="280" paddingTop="5" paddingBottom="10">
                        <mx:Label text="BASIC" fontSize="24" fontWeight="bold"/>
                        <mx:Label text="$25/month" color="#D42525" fontWeight="bold" fontSize="20"/>
                        <mx:HRule width="100%"/>
                        <mx:VBox>
                            <mx:Text selectable="false" text="Five users" fontSize="16"/>
                            <mx:Text selectable="false" text="35 MB of storage" fontSize="16"/>
                        </mx:VBox>
                        <mx:HRule width="100%"/>
                        <mx:Text text="Quickly get a small organization&#13;started with reports and analysis on&#13;other SaaS applications such as&#13;Basecamp and Highrise."
                                fontSize="14"/>
                        <mx:Button label="Sign Up" click="dispatchEvent(new Event('basic'))" styleName="blueButton"
                                   fontSize="16" buttonMode="true" useHandCursor="true"/>
                    </mx:VBox>
                    <mx:VBox borderStyle="solid" dropShadowEnabled="true" cornerRadius="8" horizontalAlign="center"
                             backgroundColor="#FFFFFF"
                             width="280" paddingTop="5" paddingBottom="10">
                        <mx:Label text="PLUS" fontSize="24" fontWeight="bold"/>
                        <mx:Label text="$75/month" color="#D42525" fontWeight="bold" fontSize="20"/>
                        <mx:HRule width="100%"/>
                        <mx:VBox>
                            <mx:Text selectable="false" text="Unlimited users" fontSize="16"/>
                            <mx:Text selectable="false" text="90 MB of storage" fontSize="16"/>
                        </mx:VBox>
                        <mx:HRule width="100%"/>
                        <mx:Text text="Have a large organization with the&#13;need to report and analyze data&#13;from SaaS applications or internal&#13;relational databases?"
                                fontSize="14"/>
                        <mx:Button label="Sign Up" click="dispatchEvent(new Event('plus'))" styleName="blueButton"
                                   fontSize="16" buttonMode="true" useHandCursor="true"/>
                    </mx:VBox>

                    <mx:VBox borderStyle="solid" dropShadowEnabled="true" cornerRadius="8" horizontalAlign="center"
                             backgroundColor="#FFFFFF"
                             width="280" paddingTop="5" paddingBottom="10">
                        <mx:Label text="PROFESSIONAL" fontSize="24" fontWeight="bold"/>
                        <mx:Label text="Starting at $200/month" color="#D42525" fontWeight="bold" fontSize="18"/>
                        <mx:HRule width="100%"/>
                        <mx:VBox>
                            <mx:Text selectable="false" text="Unlimited users" fontSize="16"/>
                            <mx:Text selectable="false" text="Starting at 250 MB of storage" fontSize="16"/>
                        </mx:VBox>
                        <mx:HRule width="100%"/>
                        <mx:Text text="Looking to upload a lot of custom&#13;data? This option gives you the&#13;power of full SaaS BI. Flexible pricing&#13;scales with your storage needs."
                                fontSize="14"/>
                        <mx:Button label="Sign Up" click="dispatchEvent(new Event('pro'))" styleName="blueButton"
                                   fontSize="16" buttonMode="true" useHandCursor="true"/>
                    </mx:VBox>
                </mx:HBox>
            <mx:ViewStack selectedIndex="{stackIndex}" resizeToContent="true">
                <mx:HBox verticalAlign="middle" horizontalGap="0">
                    <mx:Label text="We also offer a"/>
                    <mx:LinkButton textDecoration="underline" label="free plan" click="dispatchEvent(new Event('free'))" paddingLeft="0" paddingRight="0"/>
                    <mx:Label text=": 1 user, 5 MB storage"/>
                </mx:HBox>
                <mx:HBox verticalAlign="middle" horizontalGap="0">
                    <mx:Label text="We do offer a" paddingLeft="0" paddingRight="0" left="0" right="0"/>
                    <mx:LinkButton textDecoration="underline" label="free plan" click="dispatchEvent(new Event('free'))" paddingLeft="0" paddingRight="0"
                            left="0" right="0"/>
                    <mx:Label text=", but it does not support the connection you're looking to report against."
                            paddingLeft="0" paddingRight="0" left="0" right="0"/>
                </mx:HBox>
            </mx:ViewStack>
            <mx:Spacer height="100%"/>
            <mx:LinkButton textDecoration="underline" label="Cancel" fontSize="16" click="dispatchEvent(new Event('cancel'))"/>
            <mx:Spacer height="100%"/>
        </mx:VBox>
    </mx:VBox>
</mx:VBox>
