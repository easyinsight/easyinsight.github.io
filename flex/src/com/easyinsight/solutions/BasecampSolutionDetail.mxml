<?xml version="1.0" ?>
<solutions:SolutionDetailRenderer xmlns:mx="http://www.adobe.com/2006/mxml"
                                  xmlns:solutions="com.easyinsight.solutions.*" xmlns:help="com.easyinsight.help.*"
                                  width="100%" height="100%" paddingLeft="0" paddingBottom="0" paddingTop="0"
                                  paddingRight="0" xmlns:viewStackEffects="org.efflex.mx.viewStackEffects.*"
                                  verticalGap="0" backgroundColor="#818285" horizontalAlign="center">
    <solutions:states>
        <mx:State name="AccountBelowRequired">
            <mx:RemoveChild target="{installButton}"/>
            <mx:AddChild relativeTo="{controlsBox}">
                <mx:VBox horizontalAlign="center" verticalAlign="middle" height="100%" verticalGap="15">
                    <mx:VBox verticalGap="0">
                        <mx:Label text="This connection requires a higher account" fontSize="16"/>
                        <mx:Label text="tier than what your current subscription." fontSize="16"/>
                    </mx:VBox>
                    <mx:Button label="Upgrade Account" styleName="blueButton" click="upgrade()"/>
                </mx:VBox>
            </mx:AddChild>
        </mx:State>
    </solutions:states>
    <mx:Script><![CDATA[
        import com.easyinsight.help.ScreencastWindow;
        import com.easyinsight.util.PopUpUtil;

        import mx.managers.PopUpManager;

        

        override protected function toAccountBelowRequiredState():void {
            currentState = "AccountBelowRequired";
        }

        private function video1():void {
            var window:ScreencastWindow = new ScreencastWindow();
            window.width = 926;
            window.height = 484;
            window.screencastSource = "http://eivideo.s3.amazonaws.com/BasecampWhy.mov";
            PopUpManager.addPopUp(window, this, true);
            PopUpUtil.centerPopUp(window);
        }

        private function video2():void {
            var window:ScreencastWindow = new ScreencastWindow();
            window.width = 638;
            window.height = 400;
            window.screencastSource = "http://eivideo.s3.amazonaws.com/BasecampSetup.mov";
            PopUpManager.addPopUp(window, this, true);
            PopUpUtil.centerPopUp(window);
        }
        ]]></mx:Script>
    <viewStackEffects:CoverFlowPapervision3D id="leftEffect" direction="horizontal"/>
    <mx:HBox width="1000" height="100%" backgroundImage="{background2}" backgroundSize="100%" paddingLeft="20"
             paddingRight="20" paddingTop="20" paddingBottom="20">
        <mx:VBox horizontalAlign="center" height="100%">
            <mx:Image source="{logo}" click="toVendorPage()"/>
            <mx:Spacer height="100%"/>
            <mx:VBox width="100%" backgroundColor="#FFFFFF" borderColor="#3370ce" borderThickness="3" cornerRadius="15"
                     borderStyle="solid"
                     paddingTop="5" paddingBottom="5" horizontalAlign="center">
                <mx:Box height="190" verticalAlign="middle" paddingLeft="10" paddingRight="20">
                    <mx:TextArea width="370" backgroundAlpha="0" borderStyle="none" selectable="false"
                                 borderThickness="0" editable="false" height="170" fontSize="16"
                                 text="Want instant insight and reporting on your project management? You can get started with Easy Insight in a couple of clicks! If you don't already have an account, you can get started with a 30 day free trial with no obligation. The full power of enterprise business intelligence is yours for the taking, all delivered with incredible ease of use."/>
                </mx:Box>
                <mx:HRule width="100%" strokeColor="#3370ce"/>
                <mx:VBox horizontalAlign="center">
                    <mx:Label text="Looking for tips, tricks, and documentation?" fontSize="16"/>
                    <mx:LinkButton label="Look at Basecamp blog posts" fontSize="16" textDecoration="underline"
                                   click="navigateToURL(new URLRequest('http://jamesboe.blogspot.com/search/label/Basecamp'), '_blank')"/>
                </mx:VBox>
                <mx:HRule width="100%" strokeColor="#3370ce"/>
                <mx:Box id="authBox"/>
                <mx:VBox id="controlsBox" paddingTop="25" paddingBottom="30">
                    <mx:Button label="Get Started Now!" fontSize="24" click="installSolution()" styleName="blueButton"
                               id="installButton"/>
                </mx:VBox>
            </mx:VBox>
            <mx:Spacer height="100%"/>
        </mx:VBox>
        <mx:Spacer width="100%"/>
        <mx:VBox width="530" height="100%">
            <mx:VBox width="100%" backgroundColor="#FFFFFF" borderColor="#3370ce" borderThickness="3" cornerRadius="15"
                     borderStyle="solid"
                     paddingTop="5" paddingBottom="5">
                <mx:HBox horizontalAlign="center" width="100%" fontFamily="Tahoma" fontWeight="bold">
                    <mx:Label text="Why Use Easy Insight with Basecamp?" fontSize="18"/>
                </mx:HBox>
                <mx:HRule width="100%" strokeColor="#3370ce"/>
                <!--<mx:HBox width="100%" horizontalAlign="center">
                    <mx:Label text="Easy Data Exploration" fontSize="16"/>
                </mx:HBox>-->
                <mx:HBox paddingLeft="5" paddingRight="5" verticalAlign="middle">                    
                    <mx:VBox>
                        <mx:Text text="Ad hoc reporting on your todos and time tracking" fontSize="14"/>
                        <mx:Text text="Improve your software life cycle management" fontSize="14"/>
                        <mx:Text text="Track your engineering and billing trends" fontSize="14"/>
                    </mx:VBox>
                </mx:HBox>
            </mx:VBox>
            <mx:Spacer height="100%"/>
            <mx:HBox width="100%" horizontalAlign="center">
                <mx:ToggleButtonBar id="videoBar">
                    <mx:dataProvider>
                        <mx:ArrayCollection>
                            <mx:Array>
                                <mx:String>Intro</mx:String>
                                <mx:String>How to Setup</mx:String>
                            </mx:Array>
                        </mx:ArrayCollection>
                    </mx:dataProvider>
                </mx:ToggleButtonBar>
            </mx:HBox>
            <mx:ViewStack selectedIndex="{videoBar.selectedIndex}" resizeToContent="true" width="100%">
                <mx:HBox width="100%" backgroundColor="#FFFFFF" borderColor="#3370ce" borderThickness="3" cornerRadius="15"
                     borderStyle="solid"
                     paddingTop="5" paddingBottom="5" horizontalAlign="center" verticalAlign="middle" paddingLeft="5"
                     paddingRight="5" horizontalScrollPolicy="off" label="Introduction" hideEffect="leftEffect" showEffect="leftEffect">
                    <mx:Image source="../assets/BasecampWhy.jpg" click="video1()" buttonMode="true" useHandCursor="true"/>
                </mx:HBox>
                <mx:HBox width="100%" backgroundColor="#FFFFFF" borderColor="#3370ce" borderThickness="3" cornerRadius="15"
                     borderStyle="solid"
                     paddingTop="5" paddingBottom="5" horizontalAlign="center" verticalAlign="middle" paddingLeft="5"
                     paddingRight="5" horizontalScrollPolicy="off" label="How to Set Up" hideEffect="leftEffect" showEffect="leftEffect">
                    <mx:Image source="../assets/BasecampHowTo.jpg" click="video2()" buttonMode="true" useHandCursor="true"/>
                </mx:HBox>
            </mx:ViewStack>

            <mx:Spacer height="100%"/>
            <mx:VBox width="100%" backgroundColor="#FFFFFF" borderColor="#3370ce" borderThickness="3" cornerRadius="15"
                     borderStyle="solid"
                     paddingTop="5" paddingBottom="5" horizontalAlign="center">
                <mx:Text text="Basecamp and 37signals are registered trademarks of 37signals, LLC."/>
                <mx:Text text="Easy Insight is in no way affiliated with 37signals nor Basecamp"/>
            </mx:VBox>
        </mx:VBox>
    </mx:HBox>
</solutions:SolutionDetailRenderer>