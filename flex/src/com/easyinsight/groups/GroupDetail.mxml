			<mx:RemoveChild target="{coreHBox}"/>			
			<mx:AddChild relativeTo="{primaryCanvas}">
				<listing:CatalogListing id="catalogListing" returnToStore="navigateToHome(event)"/>
			</mx:AddChild>
