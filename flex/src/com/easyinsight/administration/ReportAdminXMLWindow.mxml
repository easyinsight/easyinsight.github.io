<?xml version="1.0"?>
<util:EISlimWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:util="com.easyinsight.util.*">
    <mx:Script><![CDATA[
        import mx.controls.Alert;
        import mx.managers.PopUpManager;

        [Bindable]
        private var reportXML:String;

        private function gotReportXML():void {
            reportXML = adminService.describeReport.lastResult as String;
        }

        private function forcedRun():void {
            Alert.show(adminService.forceRun.lastResult as String);
        }
]]></mx:Script>
    <mx:RemoteObject id="adminService" destination="admin">
        <mx:method name="describeReport" result="gotReportXML()"/>
        <mx:method name="forceRun" result="forcedRun()"/>
    </mx:RemoteObject>
    <mx:VBox>
        <mx:TextInput id="urlInput"/>
        <mx:Button label="Retrieve" click="adminService.describeReport.send(urlInput.text)"/>
        <mx:Button label="Test" click="adminService.forceRun.send(urlInput.text)"/>
        <mx:TextArea text="{reportXML}"/>
        <mx:Button label="Copy to Clipboard" click="System.setClipboard(reportXML)"/>
        <mx:Button label="Close" click="PopUpManager.removePopUp(this)"/>
    </mx:VBox>
</util:EISlimWindow>
