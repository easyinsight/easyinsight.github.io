<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Metadata>
		[Event(name="createdMerchant", type="com.easyinsight.store.CreatedMerchantEvent")]
	</mx:Metadata>
	<mx:Script>
		<![CDATA[
        import com.easyinsight.util.PopUpUtil;

        import mx.managers.PopUpManager;
			import com.easyinsight.store.CreatedMerchantEvent;
			import com.easyinsight.store.MerchantAccountCreationWindow;
			
			private function createMerchantAccount():void {
            	var window:MerchantAccountCreationWindow = MerchantAccountCreationWindow(PopUpManager.createPopUp(this, 
            		MerchantAccountCreationWindow, true))
        		window.addEventListener(CreatedMerchantEvent.CREATED_MERCHANT, createdMerchant);                		
        		PopUpUtil.centerPopUp(window);
            }
            
            private function createdMerchant(event:CreatedMerchantEvent):void {
            	dispatchEvent(event);
            }
		]]>
	</mx:Script>
	<mx:Label text="You'll need to set up a merchant account to use a commercial feed policy."/>	
	<mx:Button label="Create Merchant Account" click="createMerchantAccount()"/>
</mx:VBox>
