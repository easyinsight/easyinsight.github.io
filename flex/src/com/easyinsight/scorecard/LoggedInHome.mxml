<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:scorecard="com.easyinsight.scorecard.*"
         xmlns:listing="com.easyinsight.listing.*" width="100%"
         height="100%" implements="com.easyinsight.listing.IPerspective">
    <mx:states>
        <mx:State name="noData">
            <mx:RemoveChild target="{scorecardBox}"/>
            <mx:AddChild relativeTo="{core}">
                <listing:MyNoData/>
            </mx:AddChild>
        </mx:State>
    </mx:states>
    <mx:Script><![CDATA[

        public function gotFocus():void {
            if (currentState == "noData") {
                scorecardDisplay.gotFocus();
            }
        }

        public function cleanup():void {
        }
        ]]></mx:Script>
    <mx:HBox horizontalAlign="center" width="100%" height="100%" backgroundColor="#818285" id="core">
        <mx:VBox width="1000" backgroundColor="#FFFFFF" height="100%" paddingTop="10" paddingLeft="5" paddingRight="5"
                 id="scorecardBox">
            <scorecard:ScorecardUserDisplay id="scorecardDisplay" noData="currentState='noData'" gotData="currentState=''"/>
        </mx:VBox>
    </mx:HBox>
</mx:VBox>