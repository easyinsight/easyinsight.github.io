		<mx:method name="deleteReportPackage" result="deletedPackage()"/>
	</mx:RemoteObject>
    <mx:RemoteObject id="etlService" destination="feeds">
		<mx:method name="deleteLookupTable" result="deletedLookupTable()"/>
	</mx:RemoteObject>

