<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:twitter="com.easyinsight.twitter.*" width="100%"
         horizontalAlign="center">
    <mx:Metadata>
        [Event(name="navigation", type="prototype.PrototypeEvent")]
    </mx:Metadata>
    <mx:Script><![CDATA[

        [Bindable]
        [Embed(source="../../assets/logo2.PNG")]
        private var logo:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/film.png")]
        private var film:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/message.png")]
        private var message:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/mouse.png")]
        private var mouse:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/ReverseGray.jpg")]
        private var banner:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/desktop.jpg")]
        private var desktop:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/igoogle.jpg")]
        private var igoogle:Class;
        ]]></mx:Script>
    <mx:VBox width="1000" height="100%" verticalGap="0">
        <mx:HBox width="100%" styleName="Cell" height="70">
            <mx:Box height="100%" width="2" backgroundColor="#DDDDDD"/>
            <mx:Box width="300" verticalAlign="middle" height="100%" horizontalAlign="center">
                <mx:Image source="{logo}" click="dispatchEvent(new PrototypeEvent(''))"/>
            </mx:Box>
            <mx:VBox width="100%" height="100%" paddingRight="15">
                <mx:HBox horizontalAlign="right" width="100%" height="50%" paddingTop="5">
                    <mx:Button label="Sign In" styleName="redButton"/>
                    <mx:Button label="Sign Up for Free Account" styleName="redButton"/>
                </mx:HBox>
                <mx:Spacer height="100%"/>
                <mx:HBox width="100%" styleName="HeaderLink" height="50%" paddingBottom="5">
                    <mx:Label text="PRODUCT"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="DATA" color="#cc0033"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="BLOG"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="CUSTOMERS"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="PARTNERS"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="COMPANY"/>
                </mx:HBox>
            </mx:VBox>
            <mx:Box height="100%" width="2" backgroundColor="#DDDDDD"/>
        </mx:HBox>        
        <mx:Canvas width="1000" backgroundColor="#FFFFFF" height="100%">
            <mx:Canvas x="700" backgroundColor="#DDDDDD" height="100%" width="300"/>
            <mx:VBox width="100%" verticalGap="0">
                <mx:HBox width="100%" horizontalGap="0">
                    <mx:VBox styleName="Cell" horizontalAlign="center" width="700" verticalGap="0">
                        <mx:HBox verticalAlign="middle" horizontalAlign="center"
                                 width="100%" backgroundImage="{banner}" backgroundSize="100%" height="60">
                            <mx:Label text="Instant Data" fontFamily="Tahoma" fontSize="24"
                                      color="#FFFFFF"/>
                        </mx:HBox>
                        <mx:HBox width="100%" height="100%">
                            <mx:VBox height="100%" width="2" backgroundColor="#DDDDDD"/>

                            <mx:VBox width="100%" height="100%" paddingTop="5">

                                    <mx:HBox width="100%" verticalAlign="middle">
                                        <mx:VBox width="100%">
                                            <mx:Label text="Immediate Connections to Data Sources" styleName="Header"/>
                                    <mx:TextArea
                                            text="You can quickly pull data into Easy Insight for any of the data sources listed below. Simply click on the data source name to jump into the Easy Insight application and start running! Prebuilt reports are available with each solution to help improve your time to results. Further reports produced by the community can be found at the Solution Exchange."
                                            styleName="PageContent" editable="false"
                                            selectable="false" width="100%" height="160"/>
                                        </mx:VBox>
                                        <mx:VBox width="280" backgroundColor="#FFFFFF" borderStyle="solid" cornerRadius="15"
                                            paddingLeft="5"
                                            paddingRight="5"
                                            paddingTop="5" paddingBottom="5" verticalAlign="middle" horizontalAlign="center"
                                            buttonMode="true" borderColor="#D42525" borderThickness="2">
                                            <mx:Label text="Want to explore free data?" styleName="Header"/>
                                            <mx:TextArea
                                                text="Easy Insight offers users the ability to publish and distribute free data. If you want to simply explore some of Easy Insight's functionality against some existing data, the Data Exchange is a great place to start!"
                                                styleName="PageContent" editable="false"
                                                selectable="false" width="100%" height="110"/>
                                            <mx:Button label="Start Exploring!" styleName="redButton"/>
                                        </mx:VBox>
                                    </mx:HBox>
                                <mx:HBox width="100%">
                                    <mx:VBox width="33%" fontSize="14" textDecoration="underline">
                                        <mx:Label text="Amazon Cloudwatch"/>
                                        <mx:Label text="Atlassian JIRA"/>
                                        <mx:Label text="Basecamp" click="dispatchEvent(new PrototypeEvent('Basecamp'))" textDecoration="underline"/>
                                    </mx:VBox>
                                    <mx:VBox width="33%" fontSize="14" textDecoration="underline">
                                        <mx:Label text="Google Analytics" click="dispatchEvent(new PrototypeEvent('GoogleAnalytics'))" textDecoration="underline"/>
                                        <mx:Label text="Highrise"/>
                                        <mx:Label text="JetBrains Teamcity"/>
                                    </mx:VBox>
                                    <mx:VBox width="33%" fontSize="14" textDecoration="underline">
                                        <mx:Label text="MySQL"/>
                                        <mx:Label text="Salesforce.com"/>
                                        <mx:Label text="SQL Server"/>
                                    </mx:VBox>
                                </mx:HBox>
                                 
                            </mx:VBox>
                        </mx:HBox>

                    </mx:VBox>
                    <mx:VBox horizontalAlign="center" width="100%" paddingTop="10">
                        <mx:VBox width="280" backgroundColor="#786e78" borderStyle="solid" cornerRadius="15"
                                 paddingLeft="5"
                                 paddingRight="5"
                                 paddingTop="5" paddingBottom="5" height="220" verticalAlign="middle"
                                 buttonMode="true" borderColor="#786e78" borderThickness="2"
                                 horizontalAlign="center">
                            <mx:Label text="Want more info?" fontSize="16" color="#FFFFFF"/>
                            <mx:Box width="100%" height="100%" horizontalAlign="center" verticalAlign="middle"
                                    backgroundColor="#FFFFFF"
                                    borderStyle="solid" borderColor="#FFFFFF" borderThickness="1"
                                    cornerRadius="5">
                                <mx:Grid width="100%">
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{film}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Watch Product Tour" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{mouse}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Free Trial Account" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{message}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Contact Us" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                </mx:Grid>
                            </mx:Box>
                        </mx:VBox>
                        <mx:Box width="280" backgroundColor="#FFFFFF" borderStyle="solid" cornerRadius="15"
                                paddingLeft="5"
                                paddingRight="5"
                                paddingTop="5" paddingBottom="5" verticalAlign="middle"
                                buttonMode="true" borderColor="#D42525" borderThickness="2">
                            <twitter:TwitterDisplay person="easyinsight"/>
                        </mx:Box>
                    </mx:VBox>
                </mx:HBox>

            </mx:VBox>
        </mx:Canvas>


        <mx:HBox width="100%" height="100" backgroundColor="#DDDDDD">

        </mx:HBox>
    </mx:VBox>
</mx:VBox>