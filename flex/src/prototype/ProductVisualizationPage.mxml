<?xml version="1.0" ?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:twitter="com.easyinsight.twitter.*" width="100%"
         horizontalAlign="center">
    <mx:Metadata>
        [Event(name="navigation", type="prototype.PrototypeEvent")]
    </mx:Metadata>
    <mx:Script><![CDATA[

        [Bindable]
        [Embed(source="../../assets/logo2.PNG")]
        private var logo:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/film.png")]
        private var film:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/message.png")]
        private var message:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/mouse.png")]
        private var mouse:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/ReverseGray.jpg")]
        private var banner:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/ReportEditor.jpg")]
        private var reportEditor:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/Gauge.jpg")]
        private var gauge:Class;

        [Bindable]
        [Embed(source="../../assets/prototype/Filters.jpg")]
        private var filtersImage:Class;


        ]]></mx:Script>
    <mx:VBox width="1000" height="100%" verticalGap="0">
        <mx:HBox width="100%" styleName="Cell" height="70">
            <mx:Box height="100%" width="2" backgroundColor="#DDDDDD"/>
            <mx:Box width="300" verticalAlign="middle" height="100%" horizontalAlign="center">
                <mx:Image source="{logo}" click="dispatchEvent(new PrototypeEvent(''))"/>
            </mx:Box>
            <mx:VBox width="100%" height="100%" paddingRight="15">
                <mx:HBox horizontalAlign="right" width="100%" height="50%" paddingTop="5">
                    <mx:Button label="Sign In" styleName="redButton"/>
                    <mx:Button label="Sign Up for Free Account" styleName="redButton"/>
                </mx:HBox>
                <mx:Spacer height="100%"/>
                <mx:HBox width="100%" styleName="HeaderLink" height="50%" paddingBottom="5">
                    <mx:Label text="PRODUCT" color="#cc0033"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="DATA"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="BLOG"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="CUSTOMERS"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="PARTNERS"/>
                    <mx:Spacer width="100%"/>
                    <mx:Label text="COMPANY"/>
                </mx:HBox>
            </mx:VBox>
            <mx:Box height="100%" width="2" backgroundColor="#DDDDDD"/>
        </mx:HBox>
        <mx:HBox backgroundColor="#DDDDDD" width="100%" paddingBottom="5" paddingTop="5">
            <mx:HBox width="100%" styleName="SubHeaderLink" paddingLeft="15" paddingRight="15">
                <mx:Label text="OVERVIEW" click="dispatchEvent(new PrototypeEvent('ProductOverview'))"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="VISUALIZATION" color="#cc0033"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="STRATEGY" click="dispatchEvent(new PrototypeEvent('ProductStrategy'))"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="DASHBOARDS" click="dispatchEvent(new PrototypeEvent('ProductDashboards'))"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="DEVELOPERS"/>
                <mx:Spacer width="100%"/>
                <mx:Label text="SERVICES"/>
            </mx:HBox>
        </mx:HBox>
        <mx:Canvas width="1000" backgroundColor="#FFFFFF" height="100%">
            <mx:Canvas x="700" backgroundColor="#DDDDDD" height="100%" width="300"/>
            <mx:VBox width="100%" verticalGap="0">
                <mx:HBox width="100%" horizontalGap="0">
                    <mx:VBox styleName="Cell" horizontalAlign="center" width="700" verticalGap="0">
                        <mx:HBox verticalAlign="middle" horizontalAlign="center"
                                 width="100%" backgroundImage="{banner}" backgroundSize="100%" height="60">
                            <mx:Label text="Visualizing your Data" fontFamily="Tahoma" fontSize="24"
                                      color="#FFFFFF"/>
                        </mx:HBox>
                        <mx:HBox width="100%" height="100%">
                            <mx:VBox height="100%" width="2" backgroundColor="#DDDDDD"/>


                                    <mx:VBox width="100%">
                                        <mx:HBox width="100%" verticalAlign="middle">
                                            <mx:VBox width="100%">
                                                <mx:Label text="Ad Hoc Report Creation"
                                                          styleName="Header"/>
                                                <mx:TextArea
                                                        text="An intuitive drag and drop report editor enables you to quickly create reports from your browser. There's no need to download and install a separate report builder--just jump right into the data and start creating meaningful reports. Once you have a report built, you can easily save and share it with your fellow users to enable quick collaborative analysis."
                                                        styleName="PageContent" editable="false"
                                                        selectable="false" width="100%" height="110"/>
                                            </mx:VBox>
                                            <mx:Image source="{reportEditor}"/>
                                        </mx:HBox>
                                        <mx:HBox width="100%">
                                            <mx:Image source="{gauge}"/>
                                            <mx:VBox width="100%">
                                                <mx:Label text="Wide Range of Report Types"
                                                          styleName="Header"/>
                                                <mx:TextArea
                                                        text="Whether you want to use lists, crosstabs, trees, column charts, pie charts, line charts, tree maps, gauges, geographic maps, or just about anything else, Easy Insight has the report type for you. We have a constantly expanding library of different reports to help you best visualize data the way you want."
                                                        styleName="PageContent" editable="false"
                                                        selectable="false" width="100%" height="80"/>
                                            </mx:VBox>
                                        </mx:HBox>
                                        <mx:HBox width="100%" verticalAlign="middle">
                                            <mx:VBox width="100%">
                                                <mx:Label text="Data Slicing and Dicing"
                                                          styleName="Header"/>
                                                <mx:TextArea
                                                        text="The same report editor also provides you with excellent capabilities for data analysis. The same drag and drop functionality lets you quickly filter down into key data subsets, drill into problem areas, and identify outliers. Once you've identified particular key insights, you can save the report for future reference, developing an ongoing view into your business."
                                                        styleName="PageContent" editable="false"
                                                        selectable="false" width="100%" height="140"/>
                                            </mx:VBox>
                                            <mx:Image source="{filtersImage}"/>
                                        </mx:HBox>
                                    </mx:VBox>


                        </mx:HBox>

                    </mx:VBox>
                    <mx:VBox horizontalAlign="center" width="100%" paddingTop="10">
                        <mx:VBox width="280" backgroundColor="#786e78" borderStyle="solid" cornerRadius="15"
                                 paddingLeft="5"
                                 paddingRight="5"
                                 paddingTop="5" paddingBottom="5" height="220" verticalAlign="middle"
                                 buttonMode="true" borderColor="#786e78" borderThickness="2"
                                 horizontalAlign="center">
                            <mx:Label text="Want more info?" fontSize="16" color="#FFFFFF"/>
                            <mx:Box width="100%" height="100%" horizontalAlign="center" verticalAlign="middle"
                                    backgroundColor="#FFFFFF"
                                    borderStyle="solid" borderColor="#FFFFFF" borderThickness="1"
                                    cornerRadius="5">
                                <mx:Grid width="100%">
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{film}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Watch Product Tour" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{mouse}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Free Trial Account" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                    <mx:GridRow>
                                        <mx:GridItem>
                                            <mx:Image source="{message}"/>
                                        </mx:GridItem>
                                        <mx:GridItem verticalAlign="middle">
                                            <mx:Label text="Contact Us" fontSize="16"
                                                      textDecoration="underline"/>
                                        </mx:GridItem>
                                    </mx:GridRow>
                                </mx:Grid>
                            </mx:Box>
                        </mx:VBox>
                        <mx:Box width="280" backgroundColor="#FFFFFF" borderStyle="solid" cornerRadius="15"
                                paddingLeft="5"
                                paddingRight="5"
                                paddingTop="5" paddingBottom="5" verticalAlign="middle"
                                buttonMode="true" borderColor="#D42525" borderThickness="2">
                            <twitter:TwitterDisplay person="easyinsight"/>
                        </mx:Box>
                    </mx:VBox>
                </mx:HBox>

            </mx:VBox>
        </mx:Canvas>


        <mx:HBox width="100%" height="100" backgroundColor="#DDDDDD">

        </mx:HBox>
    </mx:VBox>
</mx:VBox>