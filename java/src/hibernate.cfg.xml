        <mapping class="com.easyinsight.analysis.MapDefinition"/>
        <mapping class="com.easyinsight.analysis.YahooMapDefinition"/>
        <mapping class="com.easyinsight.analysis.AnalysisItem"/>
        <mapping class="com.easyinsight.analysis.AnalysisDimension"/>
        <mapping class="com.easyinsight.analysis.AnalysisRangeDimension"/>
        <mapping class="com.easyinsight.analysis.AnalysisMeasure"/>
        <mapping class="com.easyinsight.analysis.AnalysisDateDimension"/>
        <mapping class="com.easyinsight.analysis.AnalysisList"/>
        <mapping class="com.easyinsight.analysis.AnalysisCalculation"/>
        <mapping class="com.easyinsight.analysis.TemporalAnalysisMeasure"/>
        <mapping class="com.easyinsight.analysis.ComplexAnalysisMeasure"/>
        <mapping class="com.easyinsight.analysis.AnalysisHierarchyItem"/>
